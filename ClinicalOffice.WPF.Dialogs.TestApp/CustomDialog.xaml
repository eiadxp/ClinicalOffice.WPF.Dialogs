<dialogs:DialogBase x:Class="ClinicalOffice.WPF.Dialogs.TestApp.CustomDialog"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:local="clr-namespace:ClinicalOffice.WPF.Dialogs.TestApp"
                             xmlns:dialogs="clr-namespace:ClinicalOffice.WPF.Dialogs;assembly=ClinicalOffice.WPF.Dialogs"
                             mc:Ignorable="d" Height="450" Width="800" DialogButtons="OkCancel" DialogTitle="Title">
    <dialogs:DialogBase.Resources>
        <Style TargetType="dialogs:DialogTitleControl">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="DodgerBlue"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </dialogs:DialogBase.Resources>
    <TextBlock Text="What are you doing?"/>
</dialogs:DialogBase>
